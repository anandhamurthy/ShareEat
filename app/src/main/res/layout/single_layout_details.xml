<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:background="@color/colorBackground"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/details_distance"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:id="@+id/details_name"
        android:layout_toLeftOf="@+id/details_distance"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorWhite"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/details_distance"
        android:layout_below="@+id/details_name"
        android:id="@+id/details_total_people"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorWhite"
        android:textSize="10sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/details_distance"
        android:layout_below="@+id/details_total_people"
        android:id="@+id/details_food_needed"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorWhite"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/details_food_needed"
        android:id="@+id/details_food_type"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/details_distance"
        android:layout_below="@+id/details_food_needed"
        android:layout_toRightOf="@+id/details_food_type"
        android:id="@+id/details_delivery"
        android:fontFamily="@font/nunito_bold"
        android:textColor="@color/colorWhite"
        android:textSize="10sp" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/done"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/details_delivery"
        android:id="@+id/details_confirm"/>
</RelativeLayout>